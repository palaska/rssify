{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "rootDir": ".",
    "outDir": "dist",
    "types": ["node", "jest"],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
